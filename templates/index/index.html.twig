{% extends 'base.html.twig' %}

{% block title %}CreativePizza{% endblock %}

{% block body %}

        <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
            <h1 class="display-4 fw-normal mb-3">HappyPizza</h1>
           
            <p class="fs-5 text-muted mb-5">Большая порция Вашего удовольствия. Для больших людей. У нас всегда Пятница! По пятницам!</p>
            

        </div>
        <main>
            <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            {% for item in product %}
                {% if item.isShow == true %}
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm">
                        <div class="card-header py-3">
                            <a href="/" class=" text-dark text-decoration-none">
                                <h4 class="my-0 fw-normal">Пицца<small class="text-muted fw-light">-{{item.name}}</small></h4>
                            </a>
                        </div>
                        <div class="card-body">
                            <a href="product/{{item.id}}" class="d-flex align-items-center ">
                            <img src="{{ asset(item.image)}}" width="260" height="220" class="mb-3" style="border-radius:5px;">
                            </a>
                            <h5 class="text-start">Ингредиенты:</h5>
                            <ul class="list-unstyled mt-3 mb-4 text-start">
                                <li>Пышное тесто</li>
                                <li>Сыр</li>
                                <li>Колбаса</li>
                                <li>Лук</li>
                                <li>Цена <span class="text-muted">(круг/500г):  </span> <strong> {{item.price}} р</strong> </li>

                            </ul>
                            <form  class="row row-cols-2 d-flex justify-content-around">
                                <div class="number">
                                    <button class="btn btn-outline-primary number-minus" type="button" onclick="this.nextElementSibling.stepDown(); this.nextElementSibling.onchange();">-</button>
                                    <input type="number" min="0" value="1" name="quantity" readonly>
                                    <button class="btn btn-outline-primary number-plus" type="button" onclick="this.previousElementSibling.stepUp(); this.previousElementSibling.onchange();">+</button>
                                </div>
                                <input type="hidden" name="product_id" value="{{item.id}}"/>
                                <input type="hidden" name="price_product" value="{{ item.price }}"/>
                                <button type="sybmit" class="col col-sm-7 btn btn-lg btn-outline-primary">Хочу!</button>
                                
                            </form>
                           
                        </div>
                    </div>
                </div>
                {% endif %}
          {% endfor %}
            </div>
            
